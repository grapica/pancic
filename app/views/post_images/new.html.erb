<h1>New post_image</h1>

<% form_for :post_image,
            :url => post_post_images_path(:post_id => @post_image.post_id),
            :html => { :multipart => true } do |f| -%>

  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>

    <p>
    <%= f.label :image %><br />
    <%= f.file_field :image %>
  </p>

  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', post_post_images_path %>