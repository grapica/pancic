<h1>Editing post_image</h1>

<% form_for :post_image,
            :url => post_image_url(@post_image),
            :html => { :method => :put, :multipart => true } do |f| -%>
			
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :post_id %><br />
    <%= f.text_field :post_id %>
  </p>
  <p>
    <%= f.label :image %><br />
    <%= f.file_field :image %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @post_image %> |
<%= link_to 'Back', post_images_path %>